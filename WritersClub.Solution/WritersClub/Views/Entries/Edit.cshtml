@{
  Layout = "_Layout";
}

@model WritersClub.Models.Entry

<h2>Edit</h2>

<h4>Edit this journal entry: @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EntryId)

    @Html.HiddenFor(model => model.Timestamp)

    @Html.LabelFor(model => model.Title)
    @Html.EditorFor(model => model.Title)

    @Html.LabelFor(model => model.Content)
    @Html.TextAreaFor(model => model.Content)
    
    @Html.Label("Select Issue")
    @Html.DropDownList("IssueId")
    
    <input class="btn btn-default" type="submit" value="Save" />
}
<p>@Html.ActionLink("Cancel", "Index")</p>