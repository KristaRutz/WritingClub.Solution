@{
  Layout = "_Layout";
}

@using WritersClub.Models;
@model IEnumerable<WritersClub.Models.Entry>;

<h1>Entries for @User.Identity.Name</h1>
<h1>Entries Index</h1>

@if (@Model.Any())
{
  <ul>
    @foreach(Entry entry in Model)
    {
        <li>@Html.ActionLink($"{entry.Title}", "Details", new { id = entry.EntryId })</li>
    }
  </ul>
} 
else
{
  <h3>No entries have been added yet!</h3>
}

<p>@Html.ActionLink("Add new entry", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>

